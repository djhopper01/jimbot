<%= form_for reminder, remote: true, html: { id: "reminder-form" } do |f| %>
  <div class="form-group">
    <%= f.label :content, "What do you want to say?", class: "control-label" %>
    <%= f.text_area :content, class: "form-control", rows: 3 %>
  </div>

  <label class="control-label" for="reminder_method">
    How do you want to send it?
  </label>

  <div class="form-group">
    <label class="checkbox-inline">
      <%= f.check_box :postcard %> Postcard
    </label>
    <label class="checkbox-inline">
      <%= f.check_box :phone %> Phone Call
    </label>
    <label class="checkbox-inline">
      <%= f.check_box :sms %> Text Message
    </label>
    <label class="checkbox-inline">
      <%= f.check_box :email %> Email
    </label>
  </div>

  <div class="form-group">
    <%= f.label :scheduled_at, "When should we send it?", class: "control-label" %>
    <div class="row">
      <div class="col-sm-4">
        <%= f.label :scheduled_at_date, "Date" %>
        <%= f.text_field :scheduled_at_date, class: "form-control", data: { provide: "datepicker", date_autoclose: true  } %>
      </div>
      <div class="col-sm-4">
        <%= f.label :scheduled_at_time, "Time" %>
        <%= f.text_field :scheduled_at_time, class: "form-control" %>
      </div>
    </div>
  </div>

  <%= f.submit reminder.submit_text, class: "btn btn-primary", data: { disable_with: "Scheduling..." } %>

  <% if reminder.persisted? %>
    <%= link_to "Delete", reminder_path(reminder), class: "btn btn-default btn-hover-danger pull-right", method: :delete, data: { remote: true, confirm: "Are you sure you want to delete this reminder?" } %>
  <% end %>
<% end %>
